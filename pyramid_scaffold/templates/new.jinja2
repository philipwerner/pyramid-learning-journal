{% extends "layout.jinja2" %}

{% block content %}
    <header class="masthead" style="background-image: url('static/img/seatown.jpg')">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="site-heading">
              <h1>{{ page_title }}</h1>
              <span class="subheading"></span>
            </div>
          </div>
        </div>
      </div>
    </header>
    
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <main class="clearfix">
            <section id="write" class="tab-content">
              <h1>New Article</h1>
              <form action="#" id="new-form">
                <label>
                <input type="text" id="article-title" placeholder="Article title" required>
                </label>
                <textarea id="article-body" rows="8" cols="40" required></textarea>
                <button type="submit">Submit</button>
              </form>
            </section>
            <section id="articles" class="tab-content">
            </section>
          </main>
        </div>
      </div>
    </div>

    <hr>

{% endblock %}
{% extends "layout.jinja2" %}

{% block content %}
    <header class="masthead" style="background-image: url('static/img/seatown.jpg')">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="site-heading">
              <h1>{{ page_title }}</h1>
              <span class="subheading"></span>
            </div>
          </div>
        </div>
      </div>
    </header>
  {% for entry in entries %}
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-preview">
            <a href="post.html">
              <h2 class="post-title"><a href="{{ request.route_url('detail', id=entry.id) }}">{{ entry.title }}</a></h2>
              <h3 class="post-meta">{{ entry.creation_date }}</h3>
              <hr>
              <p class="post-subtitle">{{ entry.body }}</p>
            </a>
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
{% endblock %}